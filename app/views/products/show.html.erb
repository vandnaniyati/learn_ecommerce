<p>
  <strong>Name</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price</strong>
  <%= @product.price %>
</p>

<p>
  <strong>size</strong>
  <% @product.variants.each do |p| %>
   <p><%= p.size %></p>
  <% end %>
</p>

<p>
  <strong>Review</strong>
  <% @product.reviews.each do |p| %>
    <p><%= p.description %></p>
  <% end %>
</p>




